<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CalculatorActivity">

    <TextView
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/txt_calc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="17dp" />

    <TextView
        android:layout_marginLeft="50dp"
        android:id="@+id/txt_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_calc"
        android:text="Hello World!"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_marginTop="50dp"
        android:id="@+id/line_1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/txt_result"
        android:layout_marginLeft="50dp">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:tag="7"
            android:text="7" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:tag="8"
            android:text="8" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:tag="9"
            android:text="9" />
    </LinearLayout>

    <Button
        android:layout_marginTop="50dp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txt_result"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:id="@+id/btn_x"
        android:tag="*"
        android:text="*" />


    <LinearLayout
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/line_1"
        android:layout_marginLeft="50dp">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:tag="4"
            android:text="4" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:tag="5"
            android:text="5" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:tag="6"
            android:text="6" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_divide"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_x"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:tag="/"
        android:text="/" />

    <LinearLayout
        android:id="@+id/line_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/line_2"
        android:layout_marginLeft="50dp">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:tag="1"
            android:text="1" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:tag="2"
            android:text="2" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:tag="3"
            android:text="3" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_plus"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_divide"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:tag="+"
        android:text="+" />

    <LinearLayout
        android:id="@+id/line_4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/line_3"
        android:layout_marginLeft="50dp">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:tag="0"
            android:text="0" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:tag="C"
            android:text="C" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_subtract"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_plus"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:tag="-"
        android:text="-" />

    <Button
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_equal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/line_4"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:tag="="
        android:text="=" />

</RelativeLayout>